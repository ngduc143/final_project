<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Brand</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to brands_path, class: button_class(theme: "transparent") do %>
      All Brands
      <% end %>
      <%= link_to edit_brand_path(@brand), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Brand:</p>
        <p><%= @brand.Brand %></p>
      </li>
      <li>
        <p class="font-semibold">Category:</p>
        <p><%= @brand.category %></p>
      </li>
  </ul>
</div>
