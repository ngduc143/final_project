<%= form_with(model: information) do |form| %>
<% if information.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(information.errors.count, "error") %> prohibited this information from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% information.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :Category, class: label_class %>
          <%= form.text_field :Category, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Price, class: label_class %>
          <%= form.text_field :Price, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Brand, class: label_class %>
          <%= form.text_field :Brand, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :Date, class: label_class %>
          <%= form.datetime_field :Date, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if information.persisted? %>
<%= link_to "Cancel", information, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", information_index_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
